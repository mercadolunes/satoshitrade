<%- include ("../dashboard/partials/_head.ejs") %>

<body>
  <div class="loader"></div>
  <div id="app">
    <div class="main-wrapper main-wrapper-1">
      <div class="navbar-bg"></div>
      <nav class="navbar navbar-expand-lg main-navbar">
        <div class="form-inline mr-auto">
          <ul class="navbar-nav mr-3">
            <li><a href="#" data-toggle="sidebar" class="nav-link nav-link-lg collapse-btn"><i
                  class="fas fa-bars"></i></a></li>
            <li>
            
            </li>
          </ul>
        </div>
        <ul class="navbar-nav navbar-right">

        <li><a href="#" class="nav-link nav-link-lg fullscreen-btn"><i class="fas fa-expand"></i></a>        </li>
          
        <%- include ("../dashboard/partials/_menuperfil.ejs") %>



        </ul>
      </nav>
      <div class="main-sidebar sidebar-style-2">
        <aside id="sidebar-wrapper">
          

          <%- include ("../dashboard/partials/_logo.ejs") %>



          <%- include ("../dashboard/partials/_menuprincipal.ejs") %>






        </aside>
      </div>
      <!-- Main Content -->
      <div class="main-content">
        <section class="section">
          <div class="section-header">
            <h1>Pagar Boleto</h1>
            <div class="section-header-breadcrumb">
              <div class="breadcrumb-item active"><a href="#">Exchange</a></div>
              <div class="breadcrumb-item">BRLT /  BTC</div>
            </div>
          </div>
          <div class="section-body">

              <div class="row">
                <div class="col-lg-3 col-md-3 col-sm-3">
                  <div class="card">
                    <div class="card-body">
                      <div class="table-responsive">
                        <table class="table table-sm">
                          <thead>
                            <tr>
                              <th scope="col">Moeda</th>
                              <th scope="col">Disponível</th>
                              <th scope="col"></th>
                            </tr>
                          </thead>
                          <tbody>
                            <tr>
                                <td>BRLT</td>
                                <td>0,00</td>
                                <td><a href="/payboleto/brlt">Pagar</a></td>
                            </tr>
                          
                            <tr>
                                <td>BTC</td>
                                <td>0,00000000</td>
                                <td><a href="/payboleto/btc">Pagar</a></td>
                            </tr>


                          </tbody>
                        </table>
                      </div>
                    </div>
                  </div>
                </div>

                <div class="col-lg-9 col-md-9 col-sm-9">

                  <% if(message.length > 0) { %> 
                    <div class="alert alert-<%= tipo %> alert-dismissible show fade">
                      <div class="alert-body">
                        <button class="close" data-dismiss="alert">
                          <span>×</span>
                        </button>
                        <%= message %>
                      </div>
                    </div>
                  <% } %>











                  <div class="row">
                    <!-- Inicio -->
                      <div class="col-lg-12 col-md-12 col-sm-12">
                        <div class="card">
                          <div class="card-header">
                            <h4>Pagar Boleto BTC</h4>
                          </div>
                          <div class="card-body">

                            <form action="/payboleto" method="POST">

                              <div class="row">
                                <div class="col-lg-8 col-md-8 col-sm-8">
                                  <div class="form-group">
                                    <label>Linha Digitável ou Código de Barras</label>
                                    <input name="linhadigitavel" type="text" class="form-control" value="">
                                  </div>
                                </div>

                                <div class="col-lg-4 col-md-4 col-sm-4">
                                  <div class="form-group">
                                    <label>Data Vencimento</label>
                                    <input name="datavencimento" type="date" class="form-control"  value="">
                                  </div>
                                </div>

                              </div>

                              <div class="row">

                                <div class="col-lg-3 col-md-3 col-sm-3">
                                  <div class="form-group">
                                    <label>Banco</label>
                                    <input name="banco" type="text" class="form-control" value="">
                                  </div>
                                </div>

                                <div class="col-lg-2 col-md-2 col-sm-2">
                                  <div class="form-group">
                                    <label>Valor Boleto</label>
                                    <input name="valorboleto" type="text" class="form-control" value="">
                                  </div>
                                </div>

                                <div class="col-lg-2 col-md-2 col-sm-2">
                                  <div class="form-group">
                                    <label>Taxa Administrativa</label>
                                    <input name="txadministrativa" type="text" class="form-control" value="">
                                  </div>
                                </div>

                                <div class="col-lg-2 col-md-2 col-sm-2">
                                  <div class="form-group">
                                    <label>Total a Pagar</label>
                                    <input name="totalpagar" type="text" class="form-control" value="" >
                                  </div>
                                </div>

                                <div class="col-lg-3 col-md-3 col-sm-3">
                                  <div class="form-group">
                                    <label>Upload Boleto</label>
                                    <input name="file" type="file" class="form-control"  value="">
                                  </div>
                                </div>

                              </div>

                              <div class="row">
                                <div class="col-lg-4 col-md-4 col-sm-4">
                                  <div class="form-group">
                                    <label>Assinatura</label>
                                    <input name="assinatura" type="password" class="form-control"  value="">
                                  </div>
                                </div>
                              </div>





                              <button class="btn btn btn-dark btn-block"> <i class="fas fa-arrow-up mr-2"></i>Pagar Boleto</button>
                            </form>

                          </div>
                        </div>
                      </div>
                    <!-- Fim -->

                    
                  </div>

                  <div class="row">

                    <!-- Inicio -->
                    <div class="col-lg-12 col-md-12 col-sm-12">
                      <div class="card">
                        <div class="card-header">
                          <h4>Últimos Pagamentos</h4>
                        </div>
                        <div class="card-body">
                          <div class="table-responsive">
                            <table class="table table-sm">
                              <thead>
                                <tr>
                                  <th scope="col">ID</th>
                                  <th scope="col">Data Pedido</th>
                                  <th scope="col">Valor</th>
                                  <th scope="col">Total {{BTC}}</th>
                                  <th scope="col">Status</th>
                                </tr>
                              </thead>
                              <tbody>



                                <% listaboletos.forEach(vwboleto => { %>

                                  <tr>
                                    <td><%= vwboleto.codigotransacao %></td>
                                    <td><%= vwboleto.datapagamento %></td>
                                    <td>0,00</td>
                                    <td>0,00</td>

                                    <% if( vwboleto.status === "finalizado") {%>
                                      <td><span class="badge badge-success"><%= vwboleto.status %></span></td>
                                    <% } if( vwboleto.status === "cancelado"){ %>
                                      <td><span class="badge badge-danger"><%= vwboleto.status %></span></td>
                                    <% } if( vwboleto.status === "pendente"){ %>
                                      <td><span class="badge badge-info"><%= vwboleto.status %></span></td>
                                    <% } %>

                                     
                                    <% }) %>
                                </tr>

                              </tbody>
                            </table>
                          </div>
                        </div>

                      </div>
                    </div>
                    <!-- Fim -->


                  </div>                  

                </div>

              </div>
          </div>
        </section>

      </div>
      <footer class="main-footer">
        <div class="footer-left">
          Copyright &copy; 2020 <div class="bullet"></div> Design By <a href="#">Snkthemes</a>
        </div>
        <div class="footer-right">
        </div>
      </footer>
    </div>
  </div>

  <%- include ("../dashboard/partials/_scripts.ejs") %>
