<div class="card "> 
    <div class="trade-header">
        <strong>Deposito BRL</strong>
    </div>
  
    <div class="card-body">
        <form  class="needs-validation"  method="POST">
           
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                    <label for="exampleInputEmail1">Limite de Depósito:</label>
                    <div class="progress">
                      <div class="progress-bar" role="progressbar" style="width: 25%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">0%</div>
                    </div>  
                    <small id="" class="form-text text-muted">0,00 / 10.000,00</small>
                    </div>
                </div>


            </div>
            
            <div class="row">
                <div class="col-xl-12">
                    <div class="text-center">
                        <span>Via Pix</span><br>
                        <img src="https://chart.apis.google.com/chart?cht=qr&chs=180x180&chl=1Ta1abfRrjzS1RXwwLE13iXnZo8nn6nMf&chld=H|0" class="qrcode">
                    </div>
                </div>            
            </div>



            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="validationCustom01">Valor Depósito:</label>
                        <input type="text" class="form-control" placeholder="" id="" name="" value="" step="1">
                    </div>
                </div>

                <div class="col-md-8">
                    <div class="form-group">
                        <label for="validationCustom01">Upload Comprovante:</label>
                        <input type="file" class="form-control" placeholder="" id="" name="" value="" step="1">
                    </div>
                </div>


            </div>
  
  
              

  
            <button class="btn btn-dark btn-block" type="submit">Avisar Depósito</button>
        </form>
    </div>
  
  </div>
  